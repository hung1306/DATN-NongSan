const router = require("express").Router();
const authFarmerController = require('../controllers/authFarmerController');
const authMiddlewares = require("../middlewares/authMiddlewares");

router.post('/farmer/register/step1', authFarmerController.registerFarmerStep1);

router.put('/farmer/register/step2/:userId', authFarmerController.registerFarmerStep2);

router.put('/farmer/register/step3/:userId', authFarmerController.registerFarmerStep3);

router.get('/protected', authMiddlewares, (req, res) => {
    res.json({ message: 'This is a protected route' });
});

module.exports = router;
